puts "------------------- PHASE 3-------------------------------"

puts "Enter YES or NO if I got it right"
ans = gets.chomp.upcase
if ans == "YES" 
	puts "Yay! I'm just too cool".reverse
elsif 
   ans == "NO".upcase
   puts "bummer!! I thought I was that good".reverse.upcase
end	



puts "------------------PHASE 4--------------------------------"
puts "Oops!! Can you guess the above output"
guess = gets.chomp

puts "---------------------------------------------------------"

if guess == "Yay! I'm just too cool"
	puts "You are right!! Good job :) "
	
elsif guess == "bummer!! I though I was that good"
	puts "You are right!! Good job :) "
else 
	puts "Hmmm! I don't think so
	May be next time :( "
end



puts "------------------PHASE 5 ------------------------------"
puts "Enter a word to replace the keyword 'QUICK'
  The quick brown fox jumped over the quick dog  "
wordRep = gets.chomp.downcase

str = "The quick brown fox jumped over the quick dog"
p str.sub "quick", "#{wordRep}"

puts "Awesome! you are doing well!"



